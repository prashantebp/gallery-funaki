{{ 'video-section.css' | asset_url | stylesheet_tag }}
{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


{%- for video_article in blogs.videos.articles -%}

  {{ video_article.image | json }}

  {% assign artist_name = video_article.metafields.accentuate.choose_artist %} 
  {% assign name = articles[artist_name].title %}
  {% if name == article.title %}
    {% assign video_url = video_article.metafields.accentuate.video_url %}
    {% comment %} First of all, we get last part of the URL that's supposedly the Youtube Video ID {% endcomment %}

    {% assign video_type = video_url | split: '.com' | first %}
    {% assign video_type = video_type | split: 'www.' | last %}

    {% assign video_id = video_url | split: '/' | last %}

    {% comment %} but we need strip any extra URL params {% endcomment %}
    {% assign video_id = video_id | split: '?' | last %}


    {% comment %} Finally, remove any hash string {% endcomment %}
    {% assign video_id = video_id | split: 'v=' | last %}

    {% if video_url contains "vimeo.com" %}
    {% assign video_id = video_url | split: '/' | last %}
    {% assign video_id = video_id | split: 'vimeo.com' | last %}
    {% endif %}            
    <section class="section section-{{ section.id }}-padding divider">
      <div class="container-xxl">
        <div class="row">
          <div class="col-16">
            <div{% if section.settings.full_width %} class="page-width"{% endif %}>
              {%- unless section.settings.heading == blank -%}
                <div class="title-wrapper title-wrapper--no-top-margin">
                  <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
                </div>
              {%- endunless -%}
            </div>
            <noscript>
              <div class="video-section__media"
                {% if video_article.image != blank %} style="padding-bottom: {{ 1 | divided_by: video_article.image.aspect_ratio | times: 100 }}%;"{% endif %}
              >
                <a href="{{ video_url }}" class="video-section__poster media media--transparent media--landscape{% if video_article.image == blank %} video-section__placeholder{% endif %}">
                  {%- if video_article.image != blank -%}
                    <img
                      srcset="{%- if video_article.image.width >= 375 -%}{{ video_article.image | image_url: width: 375 }} 375w,{%- endif -%}
                        {%- if video_article.image.width >= 750 -%}{{ video_article.image | image_url: width: 750 }} 750w,{%- endif -%}
                        {%- if video_article.image.width >= 1100 -%}{{ video_article.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                        {%- if video_article.image.width >= 1500 -%}{{ video_article.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                        {%- if video_article.image.width >= 1780 -%}{{ video_article.image | image_url: width: 1780 }} 1780w,{%- endif -%}
                        {%- if video_article.image.width >= 2000 -%}{{ video_article.image | image_url: width: 2000 }} 2000w,{%- endif -%}
                        {%- if video_article.image.width >= 3000 -%}{{ video_article.image | image_url: width: 3000 }} 3000w,{%- endif -%}
                        {%- if video_article.image.width >= 3840 -%}{{ video_article.image | image_url: width: 3840 }} 3840w,{%- endif -%}
                        {{ video_article.image | image_url }} {{ video_article.image.width }}w"
                      src="{{ video_article.image | image_url: width: 1920 }}"
                      alt="{{ 'sections.video.load_video' | t: description: section.settings.description | escape }}"
                      loading="lazy"
                      width="{{ video_article.image.width }}"
                      height="{{ video_article.image.height }}"
                    >
                  {%- else -%}
                    {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                  {%- endif -%}
                </a>
              </div>
            </noscript>
            <deferred-media class="video-section__media deferred-media no-js-hidden gradient global-media-settings" data-media-id="{{ video_id }}"
            >
              <button
                id="Deferred-Poster-Modal-{{ video_id }}"
                class="video-section__poster media deferred-media__poster media--landscape"
                type="button"
              >
                {%- if articles[artist_name].image != blank -%}
                  <img
                    srcset="{%- if articles[artist_name].image.width >= 375 -%}{{ articles[artist_name].image | image_url: width: 375 }} 375w,{%- endif -%}
                      {%- if articles[artist_name].image.width >= 750 -%}{{ articles[artist_name].image | image_url: width: 750 }} 750w,{%- endif -%}
                      {%- if articles[artist_name].image.width >= 1100 -%}{{ articles[artist_name].image | image_url: width: 1100 }} 1100w,{%- endif -%}
                      {%- if articles[artist_name].image.width >= 1500 -%}{{ articles[artist_name].image | image_url: width: 1500 }} 1500w,{%- endif -%}
                      {%- if articles[artist_name].image.width >= 1780 -%}{{ articles[artist_name].image | image_url: width: 1780 }} 1780w,{%- endif -%}
                      {%- if articles[artist_name].image.width >= 2000 -%}{{ articles[artist_name].image | image_url: width: 2000 }} 2000w,{%- endif -%}
                      {%- if articles[artist_name].image.width >= 3000 -%}{{ articles[artist_name].image | image_url: width: 3000 }} 3000w,{%- endif -%}
                      {%- if articles[artist_name].image.width >= 3840 -%}{{ articles[artist_name].image | image_url: width: 3840 }} 3840w,{%- endif -%}
                      {{ articles[artist_name].image | image_url }} {{ articles[artist_name].image.width }}w"
                    src="{{ articles[artist_name].image | image_url: width: 1920 }}"
                    sizes="{% if section.settings.full_width %}100vw{% else %}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw{% endif %}"
                    alt="{{ 'sections.video.load_video' | t: description: section.settings.description | escape }}"
                    loading="lazy"
                    width="{{ articles[artist_name].image.width }}"
                    height="{{ articles[artist_name].image.height }}"
                  >
                {%- else -%}
                  {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                {%- endif -%}
                <span class="deferred-media__poster-button motion-reduce">
                  {%- render 'icon-play' -%}
                </span>
              </button>
              <template>
                {%- if video_type == 'youtube' -%}
                  <iframe src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1" class="js-youtube" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                {%- else -%}
                  <iframe src="https://player.vimeo.com/video/{{ video_id }}" class="js-vimeo" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                {%- endif -%}
              </template>
            </deferred-media>   

          </div>
        </div>
      </div>
    </section>
  {% endif %}    
{%- endfor -%}

{% schema %}
{
  "name": "t:sections.video.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Video",
      "label": "t:sections.video.settings.heading.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "t:sections.video.settings.cover_image.label"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": [
        "youtube",
        "vimeo"
      ],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "label": "t:sections.video.settings.video_url.label",
      "placeholder": "t:sections.video.settings.video_url.placeholder",
      "info": "t:sections.video.settings.video_url.info"
    },
    {
      "type": "text",
      "id": "description",
      "label": "t:sections.video.settings.description.label",
      "info": "t:sections.video.settings.description.info"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.video.settings.full_width.label",
      "default": false
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.video.presets.name"
    }
  ]
}
{% endschema %}
