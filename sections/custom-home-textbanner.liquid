{%- style -%}
  .shopify-section.section{
    padding: 0;
  }
{%- endstyle -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="fun-text-banner__section {% if section.settings.hide_divider %}fun-text-banner__section--hide-divider{% endif %} fun-text-banner__section--{{ section.settings.text_content_position }} section section-{{ section.id }}-padding">
  <div class="container-xxl">
      <div class="row">
          <div class="col-16">
            {% if section.settings.heading != '' %}
              <h2 class="section-title {% if section.settings.text_center %} text-center d-flex justify-content-center {% endif %}">{{ section.settings.heading }}</h2>
              <h4 class="section-subtitle">{{ section.settings.subheading }}</h4>
            {% endif %}
            <div class="fun-text-banner__content {% if section.settings.text_center %} text-center d-flex justify-content-center {% endif %}">
              {{ section.settings.discription }}
            </div>
          </div>
      </div>
  </div>
</section>

{% schema %}
{
  "name": "Home Page Long Heading",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Long Heading"
    },
    {
        "type": "text",
        "id": "subheading",
        "label": "Sub Title"
    },
    {
        "type": "richtext",
        "id": "discription",
        "label": "Discription"
    },
    {
      "type": "checkbox",
      "id": "text_center",
      "default": false,
      "label": "align text center"
    },
    {
      "type": "checkbox",
      "id": "hide_divider",
      "default": false,
      "label": "hide divider"
    },

    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "Home Page Text Banner"
    }
  ]
}
{% endschema %}
