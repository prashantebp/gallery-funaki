                    </div>
                  </summary>
                  <div id="Facet-3-{{ section.id }}" class="parent-display {% if section.settings.filter_type == 'horizontal' %}facets__display{% else %}facets__display-vertical{% endif %}">
                    {%- if section.settings.filter_type != 'vertical' -%}
                      <div class="facets__header">
                        <span class="facets__selected no-js-hidden">{{ 'products.facets.filters_selected' | t: count: collection.all_tags.size }}</span>
                        <facet-remove>
                          <a href="#" class="facets__reset link underlined-link">
                            {{ 'products.facets.reset' | t }}
                          </a>
                        </facet-remove>
                      </div>
                    {%- endif -%}
